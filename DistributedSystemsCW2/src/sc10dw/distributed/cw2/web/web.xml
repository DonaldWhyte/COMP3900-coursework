<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
  <display-name>Employee Payroll System</display-name>
  <description>
    System which allows users to create employee payroll information
    and search for information about existing employees.
  </description>
  <servlet>
    <servlet-name>CreateEmployee</servlet-name>
    <servlet-class>sc10dw.distributed.cw2.web.CreateEmployee</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeInformation</servlet-name>
    <servlet-class>sc10dw.distributed.cw2.web.EmployeeInformation</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserForms</servlet-name>
    <servlet-class>sc10dw.distributed.cw2.web.UserForms</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateEmployee</servlet-name>
    <url-pattern>/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeInformation</servlet-name>
    <url-pattern>/employee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserForms</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
